# Skill-Know 环境配置示例

# 应用配置
APP_NAME=Skill-Know
DEBUG=false

# 数据目录
DATA_DIR=data

# 数据库配置
DATABASE_URL=sqlite+aiosqlite:///data/skill_know.db

# LLM 配置（必填）
LLM_PROVIDER=openai
LLM_API_KEY=your-api-key-here
LLM_BASE_URL=https://api.openai.com/v1
LLM_CHAT_MODEL=gpt-4o-mini

# 服务器配置
HOST=0.0.0.0
PORT=8000

# CORS 配置
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
